import("//build/rust/rustc_library.gni")
import("//build/rust/rustc_link_directive.gni")

rustc_link_directive("crypto.rust_link_directive") {
  lib_name = "crypto"
  if (is_host) {
    lib_static_target = "//third_party/boringssl:crypto-static"
  } else {
    lib_shared_target = "//third_party/boringssl:crypto-shared"
  }
}

rustc_library("bssl-sys") {
  name = "bssl-sys"
  version = "0.1.0"
  with_unit_tests = true
  edition = "2021"

  non_rust_deps = [
    # only depend on libcrypto until we actually use the SSL bits
    ":crypto.rust_link_directive",
  ]

  sources = [ "src/lib.rs" ]
}
