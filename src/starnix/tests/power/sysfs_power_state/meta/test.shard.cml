{
    include: [
        "//src/power/system-activity-governor/meta/use-suspender-for-test-sag.shard.cml",
        "//src/starnix/containers/debian/meta/debian_container_for_test.shard.cml",
        "//src/starnix/tests/starnix_test.shard.cml",
    ],
    program: {
        uid: "0",
        test_type: "gtest",
    },
    children: [
        {
            name: "fake-suspend",
            url: "fake-suspend-pkg#meta/fake-suspend.cm",
        },
    ],
    offer: [
        {
            service: "fuchsia.hardware.suspend.SuspendService",
            from: "#fake-suspend",
            to: "#test-system-activity-governor",
        },
        {
            protocol: "test.suspendcontrol.Device",
            from: "#fake-suspend",
            to: "#fake-suspend-controller",
        },
        {
            protocol: "fuchsia.logger.LogSink",
            from: "parent",
            to: [
                "#fake-suspend",
                "#fake-suspend-controller",
            ],
        },
    ],
}
