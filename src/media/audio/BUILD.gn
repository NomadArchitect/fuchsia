import("//build/fuzzing/fuzzer.gni")
import("//build/fuzzing/fuzzer_package.gni")

group("audio") {
  testonly = true
  deps = [
    ":tests",
    ":tools",
    "audio_core",
    "drivers",
    "examples",
    "lib",
    "services",
  ]
}

fuzzer_package("audio-fuzzers") {
  cpp_fuzzers = [ "audio_core/shared:audio_core_config_fuzzer" ]
}

group("tests") {
  testonly = true
  deps = [
    ":audio-fuzzers",
    "audio_core:tests",
    "drivers:tests",
    "examples:tests",
    "lib:tests",
    "services:tests",
    "tools:tests",
  ]
}

group("tools") {
  testonly = true
  deps = [
    "audio_core:tools",
    "tools",
  ]
}
