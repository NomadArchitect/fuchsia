{
    include: [ "syslog/client.shard.cml" ],
    program: {
        runner: "elf",
        binary: "bin/dev_authenticator",

        // TODO(fxb/116213): Remove this argument once we start operating
        // exclusively in Interaction mode.
        args: [
            "--mode",
            "INTERACTION",
        ],
    },
    capabilities: [
        {
            protocol: [ "fuchsia.identity.authentication.StorageUnlockMechanism" ],
        },
    ],
    expose: [
        {
            protocol: "fuchsia.identity.authentication.StorageUnlockMechanism",
            from: "self",
            as: "fuchsia.identity.authentication.TestStorageUnlockMechanism",
        },
    ],
}
