import("//build/testing/cc_test_executable.gni")
import("//src/graphics/lib/magma/gnbuild/magma.gni")

declare_args() {
  msd_intel_gen_enable_hardware_unit_tests = false
}

group("integration") {
  testonly = true

  public_deps = [
    ":magma-conformance-vendor-helper-intel",
    ":msd_intel_gen_integration_tests",
  ]
}

cc_test_executable("msd_intel_gen_integration_tests") {
  testonly = true

  defines =
      [ "ENABLE_HARDWARE_UNIT_TESTS=$msd_intel_gen_enable_hardware_unit_tests" ]

  sources = [
    "test_execute.cc",
    "test_hang_recovery.cc",
    "test_hardware_unit_tests.cc",
    "test_icd_list.cc",
    "test_shutdown.cc",
    "test_workarounds.cc",
  ]

  deps = [
    "../../include",
    "//sdk/fidl/fuchsia.driver.registrar:fuchsia.driver.registrar_cpp",
    "//sdk/fidl/fuchsia.gpu.magma:fuchsia.gpu.magma_cpp",
    "//src/graphics/lib/magma/src/libmagma",
    "//src/graphics/magma/lib/magma/test_util:logger_init_helper",
    "//src/graphics/magma/lib/magma/util:short_macros",
    "//src/graphics/magma/lib/magma_client/test_util:inflight_list",
    "//src/graphics/magma/lib/magma_client/test_util:magma_map_cpu",
    "//src/graphics/magma/lib/magma_client/test_util:test_device_helper",
    "//src/lib/fxl/test:gtest_main",
    "//zircon/system/ulib/trace",
    "//zircon/system/ulib/trace-vthread",
  ]
}

executable("magma-conformance-vendor-helper-intel") {
  testonly = true
  sources = [ "vendor_helper_intel.cc" ]
  deps = [
    "//sdk/lib/async-loop:async-loop-cpp",
    "//sdk/lib/component/outgoing/cpp",
    "//sdk/lib/syslog/cpp",
    "//src/graphics/drivers/msd-intel-gen/include:include",
    "//src/graphics/magma/tests/integration:vendor_helper_interface",
  ]
}
